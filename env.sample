# Webmin server URLs (comma-separated)
# Example: https://webmin1.example.com,https://webmin2.example.com
WEBMIN_SERVERS=https://webmin1.example.com,https://webmin2.example.com,https://webmin3.example.com

# Corresponding API keys for Webmin servers (comma-separated, in the same order as WEBMIN_SERVERS)
# Ensure keys match the order of WEBMIN_SERVERS
WEBMIN_API_KEYS=api_key1,api_key2,api_key3

# Additional domains to check (comma-separated)
# Example: example.com,anotherexample.com
ADDITIONAL_DOMAINS=example.com,anotherexample.com

# Batch size for domain checks
# Number of domains processed in each batch
BATCH_SIZE=5

# Delay between batch processing (seconds)
# Time interval (in seconds) between processing batches
BATCH_DELAY=2

# Codecov token for CI/CD coverage reporting
# Replace with your actual Codecov token
CODECOV_TOKEN=your_codecov_token_here

# Error Handling Settings
# ERROR_ALERT_THRESHOLD: Number of consecutive errors before an alert is triggered
# MAX_RETRIES: Maximum number of retries for API calls
ERROR_ALERT_THRESHOLD=3
MAX_RETRIES=5

# Email Settings
# EMAIL_SENDER: Sender email address for notifications
# EMAIL_RECIPIENT: Recipient email address for notifications
EMAIL_SENDER=noreply@example.com
EMAIL_RECIPIENT=admin@example.com

# SMTP server settings for sending emails
SMTP_SERVER=smtp.example.com
SMTP_PORT=587
SMTP_USER=user
SMTP_PASS=pass

# Monitoring Interval (in seconds)
# Interval for domain checks, specified in seconds
CHECK_INTERVAL=3600

# Email Templates
# Specify paths to email templates used for notifications
EMAIL_HTML_TEMPLATE=templates/email_html.j2
EMAIL_PLAIN_TEMPLATE=templates/email_plain.j2

# Log file settings
# LOG_FILE_PATH: Path to the log file
# LOG_LEVEL: Set logging level (e.g., DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_FILE_PATH=webmin_domains.log
LOG_LEVEL=INFO

# Notification Settings
# Prefix added to notification subjects
NOTIFICATION_SUBJECT_PREFIX=[Domain Monitor]

# SSL Check Settings
# SSL_CHECK_ENABLED: Set to False to disable SSL checks
# SSL_WARNING_DAYS: Number of days before expiration to trigger warning alerts
SSL_CHECK_ENABLED=True
SSL_WARNING_DAYS=30

# Retry Delay for Errors (in seconds)
# Time interval for retrying failed API calls
RETRY_DELAY=5

# Timeout for API Requests (in seconds)
# Maximum duration for API requests before timeout
API_TIMEOUT=10

# Support and Logo URLs
# SUPPORT_URL: URL for the support page, included in notifications
# LOGO_URL: URL for the logo image, used in HTML email template
SUPPORT_URL=https://support.example.com
LOGO_URL=https://example.com/logo.png

